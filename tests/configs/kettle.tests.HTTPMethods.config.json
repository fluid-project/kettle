                                    "getHandler": {
                                        "type": "kettle.tests.HTTPMethods.get.handler",
                                        "route": "/",
                                        "method": "get"
                                    },
                                    "postHandler": {
                                        "type": "kettle.tests.HTTPMethods.post.handler",
                                        "route": "/",
                                        "method": "post"
                                    },
                                    "putHandler": {
                                        "type": "kettle.tests.HTTPMethods.put.handler",
                                        "route": "/",
                                        "method": "put"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
